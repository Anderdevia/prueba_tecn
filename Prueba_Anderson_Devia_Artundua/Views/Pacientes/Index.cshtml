@model IEnumerable<WcfServPaci.paciente>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="text-center text-primary ">Registro de Pacientes</h1>
            <a class="btn btn-sm btn-primary w3-padding-16" href="~/Pacientes/Create">Agregar</a>
            <br><br>
            <table class="table table-bordered">
                <tr class="text-center">
                    <th>Tipo de Documento</th>
                    <th>Documento</th>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Correo</th>
                    <th>Telefono</th>
                    <th>Fecha de Nacimiento</th>
                    <th>Estado de Afiliación</th>
                </tr>
                @foreach (var d in Model)
                {
                    <tr class="text-center">
                        <td>@d.tipo_documento</td>
                        <td>@d.numero_documento</td>
                        <td>@d.nombres</td>
                        <td>@d.apellidos</td>
                        <td>@d.correo</td>
                        <td>@d.telefono</td>
                        <td>@d.fecha_nacimiento</td>
                        <td>@d.estado_afiliacion</td>
                        <td>
                            <a class="btn btn-sm btn-warning " href="~/Pacientes/Edit/@d.numero_documento">Editar</a>

                        </td>
                        <td>
                            <a class="btn btn-sm btn-default " href="~/Pacientes/Details/@d.numero_documento">Detalles</a>

                        </td>
                        <td>
                            <a class="btn btn-sm btn-danger " href="~/Pacientes/Delete/@d.numero_documento">Eliminar</a>

                        </td>
                    </tr>
                }
            </table>

        </div>

    </div>

</div>
